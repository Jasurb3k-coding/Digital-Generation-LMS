<UserControl x:Class="WPF_treeview.PacketItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_treeview"
             Cursor="Hand"
             mc:Ignorable="d" Width="400" Height="60">
    <DockPanel Height="60" Background="Transparent" Margin="5 0 5 0">
        <Ellipse Height="45" Width="45" HorizontalAlignment="Left">
            <Ellipse.Fill>
                <ImageBrush x:Name="PacketImg" ImageSource="./LangImages/Linux.png" Stretch="Fill"/>
            </Ellipse.Fill>
        </Ellipse>
        <StackPanel VerticalAlignment="Center" Margin="5 0 0 0">
            <TextBlock x:Name="PacketName" Text="Python dasturlash tili" Foreground="#333333" FontFamily="poppins" FontWeight="Medium"/>
            <TextBlock x:Name="AuthorName" Text="Amirbek Aslanov" Foreground="#6B6B6B" FontWeight="Regular" FontFamily="poppins" Margin="0 3 0 0"/>
        </StackPanel>
    </DockPanel>
</UserControl>
